@model IEnumerable<museumProj.Models.catogery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}

<h2>All Catogeries</h2>

<p>
    @Html.ActionLink("Create New", "Create",null,new { @class="btn btn-outline-primary"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id = item.id })*@
                <a href="~/catogeries/details/@item.id" class="btn btn-info btn-circle">
                    <i class="fas fa-info-circle"></i>
                </a>|
                <a href="~/catogeries/edit/@item.id" class="btn btn-warning btn-circle">
                    <i class="fas fa-exclamation-triangle"></i>
                </a>|
                <a href="~/catogeries/delete/@item.id" class="btn btn-danger btn-circle">
                    <i class="fas fa-trash"></i>
                </a>
                @*@Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-info btn-circle" }) <a href="#"><i class="fas fa-info-circle"></i></a>|
                @Html.ActionLink("Delete", "Delete", new { id = item.id })<a href="#"><i class="fas fa-info-circle"></i></a>*@
            </td>
        </tr>
    }

</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>